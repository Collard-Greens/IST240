@model int

<form action='' method='post'>

    <div class='number1'>
        <label>First Number</label>
        <input id='number1' name='valA' type='text' />
    </div>
    <div class='number2'>
        <label>Second Number</label>
        <input id='number2' name='valB' type='text' />
    </div>

    <fieldset>
        <legend>calc</legend>
        <input id='add'
               name='calc'
               type='radio'
               value='add'
               checked />
        <label class='radio-label'>Addition</label>
        <input id='multiply'
               name='calc'
               type='radio'
               value='multiply'/>
        <label class='radio-label'>Multiplication</label>
        <input id='divide'
               name='calc'
               type='radio'
               value='divide'/>
        <label class='radio-label'>Division</label>
        <input id='subtract'
               name='calc'
               type='radio'
               value='subtract'/>
        <label class='radio-label'>Subtraction</label>
    </fieldset>

    <div class='form-row'>
        <button>Calculate</button>
    </div>

    <p> Answer: @Model </p>

</form>