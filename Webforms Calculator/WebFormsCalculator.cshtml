@{
	if(IsPost){
		int number1 = Convert.ToInt32(Request["number1"]);
		int number2 = Convert.ToInt32(Request["number2"]);
		int answer;
		string calc = (Request["calc"]);	
		
		 switch(calc)
		{
				case "add":
					answer = number1 + number2;
					break;
				case "multiply":
					answer = number1 * number2;
					break;
				case "divide":
					answer = number1 / number2;
					break;
				case "subtract":
					answer = number1 - number2;
					break;
		}		
	}
}

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8'/>
    <title>Calculator</title>
  </head>  
<html>
<body> 

	<form action='' method='post'>
		
		<div class='number1'>
			<label>First Number</label>
			<input id='number1' name='number1' type='text'/>
		</div>
		<div class='number2'>
			<label>Second Number</label>
			<input id='number2' name='number2' type='text'/>
		</div>
		
	<fieldset>
		<legend>calc</legend>
		<input id='add'
			name='calc'
			type='radio'
			value='add'
			checked />
		<label class='radio-label'>Addition</label>
		<input id='multiply'
			name='calc'
			type='radio'
			value='multiply'
		<label class='radio-label'>Multiplication</label>
		<input id='divide'
			name='calc'
			type='radio'
			value='divide'		
		<label class='radio-label'>Division</label>
		<input id='subtract'
			name='calc'
			type='radio'
			value='subtract'
		<label class='radio-label'>Subtraction</label>
	</fieldset>
	
	<div class='form-row'>
		<button>Calculate</button>
		<div class='answer'>
			<label>Answer</label>
			<name='answer' type='text'/>
		</div>
	</div>	
		
	</form>
</body>
</html>